	urldate = {2021-03-26},
	journal = {Ecology},
	author = {Tsai, Cheng-Han and Miki, Takeshi and Chang, Chun-Wei and Ishikawa, Kanako and Ichise, Satoshi and Kumagai, Michio and Hsieh, Chih-hao},
	year = {2014},
	keywords = {Lake Biwa, functional response group, lake environmental changes, phytoplankton biodiversity, reservoir management, species abundance distribution},
	pages = {3335--3343},
}

@article{yeakel_synchronisation_2014,
	title = {Synchronisation and stability in river metapopulation networks},
