	journal = {Ecological Modelling},
	author = {Ozesmi, S. L. and Ozesmi, U.},
	month = mar,
	year = {1999},
	keywords = {Agelaius phoeniceus, Blackbird agelaius-phoeniceus, Cistothorus, artificial neural networks, billed, construction, expert system, freshwater marsh, habitat selection, intelligence, interaction, interspecific, logistic regression, machine learning techniques, management, marsh wren, neural interpretation diagram, palustris, prediction, red-winged blackbird, regression, reproductive success, spatial model, wetlands},
