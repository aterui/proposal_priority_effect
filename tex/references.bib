	keywords = {BULL TROUT, MOVING-AVERAGE APPROACH, PACIFIC SALMON, POPULATIONS, RIPARIAN, STREAM NETWORKS, SYSTEM, TEMPERATURE, THERMAL HABITAT, UNITED-STATES, cambio climatico, climate change, espacial, extremo de verano, habitat, habitat termico, modelo, red hidrologica, river network, spatial model, summer extreme, thermal},
