	keywords = {Drosophila, cannibalism, density dependence, kin selection, relatedness cues},
}

@article{fonte_amphibian_nodate,
	title = {Amphibian diversity in the {Amazonian} floating meadows: a {Hanski} core-satellite species system},
	volume = {n/a},
	issn = {1600-0587},
