	keywords = {CALIFORNIA, COHO SALMON, HETEROGENEITY, LANDSCAPE, LOTIC SYSTEMS, ONCORHYNCHUS-TSHAWYTSCHA, Oregon, PERSPECTIVE, RIVER, STEELHEAD, TROUT STREAMS, adult chinook, behavioral thermoregulation, habitat, habitat association, logistic regression, patchiness, salmon, salmonid ecology, spawning, stream temperature, thermal mapping, thermal refugia, thermal remote sensing},
