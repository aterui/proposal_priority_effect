	author = {Holenstein, Kathrin and Harvey, Eric and Altermatt, Florian},
	keywords = {biodiversity change, dendritic networks, invasive species, microcosm experiment, protists},
}

@article{hirt_environmental_nodate,
	title = {Environmental and anthropogenic constraints on animal space use drive extinction risk worldwide},
