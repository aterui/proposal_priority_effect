	author = {Hopper, Garrett W. and González, Irene Sánchez and Bucholz, Jamie R. and Lozier, Jeffrey D. and Atkinson, Carla L.},
	keywords = {biodiversity-ecosystem functioning, biogeochemical cycling, complementarity, ecosystem services, evenness, freshwater mussels},
