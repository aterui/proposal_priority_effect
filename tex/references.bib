@article{akiyama_survival_2007,
	title = {Survival of glochidial larvae of the freshwater pearl mussel, \textit{{Margaritifera} laevis} ({Bivalvia} : {Unionoida}), at different temperatures: {A} comparison between two populations with and without recruitment},
	volume = {24},
