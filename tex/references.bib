	year = {2013},
	keywords = {Bayesian inference, Chthamalus, Taylor's power law, environmental variability, intertidal rocky shore, mean-variance relationship, population dynamics, population models, population regulation, population synchrony, seasonal variability, spatial scale},
	pages = {art48},
}

@article{smith_characterizing_2013,
	title = {Characterizing scale-dependent community assembly using the functional-diversity–area relationship},
