@article{baxter_fish_2004,
	title = {Fish invasion restructures stream and forest food webs by interrupting reciprocal prey subsidies},
	volume = {85},
	issn = {1939-9170},
	url = {https://esajournals.onlinelibrary.wiley.com/doi/abs/10.1890/04-138},
	doi = {https://doi.org/10.1890/04-138},
	abstract = {Habitat alteration and biotic invasions are the two leading causes of global environmental change and biodiversity loss. Recent innovative experiments have shown that habitat disturbance can have drastic effects that cascade to adjacent ecosystems by altering the flow of resource subsidies from donor systems. Likewise, exotic species invasions could alter subsidies and affect distant food webs, but very few studies have tested this experimentally. Here we report evidence from a large-scale field experiment in northern Japan that invasion of nonnative rainbow trout (Oncorhynchus mykiss) interrupted reciprocal flows of invertebrate prey that drove stream and adjacent riparian forest food webs. Rainbow trout usurped terrestrial prey that fell into the stream, causing native Dolly Varden charr (Salvelinus malma) to shift their foraging to insects that graze algae from the stream bottom. This indirectly increased algal biomass, but also decreased biomass of adult aquatic insects emerging from the stream to the forest. In turn, this led to a 65\% reduction in the density of riparian-specialist spiders in the forest. Thus, species invasions can interrupt flows of resources between interconnected ecosystems and have effects that propagate across their boundaries, effects that may be difficult to anticipate without in-depth understanding of food web relationships.},
	language = {en},
	number = {10},
	urldate = {2021-03-01},
	journal = {Ecology},
	author = {Baxter, Colden V. and Fausch, Kurt D. and Murakami, Masashi and Chapman, Phillip L.},
	year = {2004},
	keywords = {Hokkaido, Hokkaido, Japan, Japan, Oncorhynchus mykiss, Salvelinus malma, food webs, invasion ecology, large-scale field experiment, resource subsidies, riparian ecology, stream ecology},
	pages = {2656--2663},
}

@article{yoshida_rapid_2003,
