	urldate = {2021-09-22},
	journal = {Freshwater Biology},
	author = {Terui, Akira and Kim, Seoghyun and Pregler, Kasey C. and Kanno, Yoichiro},
	year = {2021},
	keywords = {aquatic system, condition dependency, context dependency, disturbance, river},
	pages = {1865--1875},
}

