@article{bertolo_inferring_2012,
	title = {Inferring {Processes} from {Spatial} {Patterns}: {The} {Role} of {Directional} and {Non}-{Directional} {Forces} in {Shaping} {Fish} {Larvae} {Distribution} in a {Freshwater} {Lake} {System}},
