	author = {McEntee, Jay P. and Burleigh, J. Gordon and Singhal, Sonal},
	month = jul,
	year = {2020},
	keywords = {biotic interactions, cline theory, hybridization, range boundaries, reproductive interference, tension zone model},
	pages = {9--28},
}

