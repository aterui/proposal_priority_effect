	journal = {Ecography},
	author = {Bowersock, Nathaniel R. and Ciarniello, Lana M. and Deacy, William W. and Heard, Doug C. and Joly, Kyle and Lamb, Clayton T. and Leacock, William B. and McLellan, Bruce N. and Mowat, Garth and Sorum, Mathew S. and van Manen, Frank T. and Merkle, Jerod A.},
