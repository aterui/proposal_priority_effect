	keywords = {BULL TROUT, COLORADO STREAMS, INTRODUCED FISHES, INVADING ORGANISMS, POPULATIONS, RAINBOW-TROUT, RESTRICTED MOVEMENT, RIVER, SOUTHERN APPALACHIAN MOUNTAINS, SPREAD},
