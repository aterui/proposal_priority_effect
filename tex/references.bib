	author = {Mruzek, Joseph L. and Budnick, William R. and Larson, Chad A. and Luc, Dinh K. and Passy, Sophia I.},
	keywords = {Rapoport's rule, environmental stress, habitat filtering, latitude–niche breadth hypothesis, latitudinal diversity gradient, physiological tolerance hypothesis},
}

@article{mestre_human_nodate,
