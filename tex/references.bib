	keywords = {Connectivity, Fish, Graph theory, Landscape connectivity, Network, Riverscape graph, Stream network, biodiversity, ecology, ecosystems, fish, fragmentation, habitat patches, headwater, population-dynamics, streams, topology, water},
	pages = {184--192},
}

@article{richard_importance_2010,
