	author = {Fargeot, Laura and Poesy, Camille and Lefort, Maxim and Prunier, Jérôme G. and Krick, Madoka and Veyssière, Charlotte and Richard, Murielle and Mercier, Chiara and Sautreuil, Morgan and Huberson, Natan and Langford, Nadia and Legrand, Delphine and Loot, Géraldine and Blanchet, Simon},
	keywords = {Alnus and Gammarus and Phoxinus, biodiversity patterns, community structure and population genomics, fish and invertebrates and riparian trees, river ecosystems, species-genetic diversity correlations},
