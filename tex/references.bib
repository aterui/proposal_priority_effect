	month = jan,
	year = {2013},
	keywords = {adult trichoptera, beta diversity, community ecology, environment, habitat size, isolation, land-use, local processes, network, networks, neutral theory, new-zealand, regional processes, relationships, spatial-pattern, species-diversity, stream},
