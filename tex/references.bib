	author = {Oppel, Steffen and Saravia, Victoria and Bounas, Anastasios and Arkumarev, Volen and Kret, Elzbieta and Dobrev, Vladimir and Dobrev, Dobromir and Kordopatis, Panagiotis and Skartsi, Theodora and Velevski, Metodija and Petrovski, Nenad and Bino, Taulant and Topi, Mirjan and Klisurov, Ivaylo and Stoychev, Stoycho and Nikolov, Stoyan C.},
