	pages = {140--150},
}

@article{warfe_productivity_2013,
	title = {Productivity, {Disturbance} and {Ecosystem} {Size} {Have} {No} {Influence} on {Food} {Chain} {Length} in {Seasonally} {Connected} {Rivers}},
