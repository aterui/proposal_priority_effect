	journal = {The ISME Journal},
	author = {Stegen, James C. and Lin, Xueju and Fredrickson, Jim K. and Chen, Xingyuan and Kennedy, David W. and Murray, Christopher J. and Rockhold, Mark L. and Konopka, Allan},
