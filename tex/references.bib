	author = {Carpenter, Stephen R. and Cole, Jonathan J. and Pace, Michael L. and Van de Bogert, Matthew and Bade, Darren L. and Bastviken, David and Gille, Caitlin M. and Hodgson, James R. and Kitchell, James F. and Kritzberg, Emma S.},
	year = {2005},
