	year = {2017},
	keywords = {biodiversity, context dependency, data-driven, ecological surprises, higher-order interactions, machine learning, macroecology, microbial ecology, multiple stressors, novel ecosystems, random forest, statistically reinforced machine learning},
	pages = {e01976},
}

@article{schindler_subsidies_2017,
	title = {Subsidies of aquatic resources in terrestrial ecosystems},
