	author = {Duarte, Milen and Verdú, Miguel and Cavieres, Lohengrin A. and Bustamante, Ramiro O.},
	keywords = {Chilean Mediterranean ecosystem, nurse species, phylogenetic specificity, positive interactions, relative interaction index},
