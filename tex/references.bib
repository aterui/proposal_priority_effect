	author = {Shaw, Allison K. and Narayanan, Naven and Stanton, Daniel E.},
	keywords = {dispersal, facilitation, foraging, host–microbe interaction, invasion, microbiome, migration, plant–insect interaction, pollination, seed dispersal, species interaction, symbiosis},
