	keywords = {Markov network, alternative stable states, community assembly, compositional stability, energy landscape, historical contingency, multistability, pairwise maximum entropy model, presence/absence data, principle of maximum entropy, regime shift, stability landscape},
	pages = {e01469},
}

@article{terui_non-random_2021,
	title = {Non-random dispersal in sympatric stream fishes: {Influences} of natural disturbance and body size},
