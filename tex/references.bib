	keywords = {Species traits, alpine streams, benthic insects, biological traits, community similarity, ecology, functional, gene flow, groups, habitat, insects, invertebrate communities, longitudinal continuum, macroinvertebrate assemblages, mountain streams, rivers, species traits},
	pages = {243--261},
