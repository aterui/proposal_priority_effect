	journal = {Oikos},
	author = {Raczyński, Mateusz and Stoks, Robby and Johansson, Frank and Sniegula, Szymon},
	keywords = {cannibalism, competition, life history, physiology, priority effect, time constraint},
}

@article{reijenga_priority_nodate,
