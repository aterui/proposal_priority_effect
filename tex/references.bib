	author = {Burger, Joseph Robert and Hou, Chen and Hall, Charles A. S. and Brown, James H.},
	keywords = {Allometry, demography, ecosystems, energy budget, evolutionary tradeoffs, life history, metabolic theory of ecology, scaling, steady-state, temperature-dependence, unified ecology},
}

@article{costa-pereira_animal_nodate,
	title = {Animal tracking moves community ecology: {Opportunities} and challenges},
