	journal = {Plant Systematics And Evolution},
	author = {Steiner, K. E. and Whitehead, V. B.},
	year = {1996},
	keywords = {Melittidae, Rediviva, Oil flowers, Scrophulariaceae, Ixianthes, bee, floral oil,, hymenoptera, oil-collecting bees, specialization for pollination, reproductive, success},
