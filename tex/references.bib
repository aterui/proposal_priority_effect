	keywords = {-likelihood estimation, biological invasion, density, diffusion, diffusion equation, dynamics, gamma distribution, invading organisms, litura fabricius lepidoptera, maximum, model, movement, noctuidae, seed dispersal, spatial expansion, spodoptera litura, spread},
