	keywords = {Mongolia, arid and semi-arid rangelands, ecosystem functioning, functional diversity, functional redundancy, grazing history, intermediate disturbance hypothesis, plant functional trait, sigmoid logistic curve, species richness},
	pages = {2598--2608},
}

@article{chisholm_niche_2010,
	title = {Niche and neutral models predict asymptotically equivalent species abundance distributions in high-diversity ecological communities},
