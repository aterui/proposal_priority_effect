	month = jun,
	year = {2000},
	keywords = {BROOK CHARR, BROWN TROUT, CORRELATED RANDOM-WALK, DISPERSAL, DYNAMICS, ENVIRONMENTS, FORAGING, INDIVIDUAL VARIATION, METAPOPULATION, MOVEMENTS, Nocomis leptocephalus, PREDATOR-PREY INTERACTION, SALVELINUS-FONTINALIS, Semotilus atromaculatus, diffusion-advection model, dispersal behaviour, fish, heterogeneity, kurtosis, mark-recapture, movement behaviour, population, stream},
	pages = {1685--1700},
